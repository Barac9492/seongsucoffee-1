# Korean Trend Scout - Environment Variables

# Database (PostgreSQL with ML extensions)
DATABASE_URL="postgresql://user:password@localhost:5432/korean_trend_scout"

# YouTube Data API v3
YOUTUBE_API_KEY="your_youtube_api_key_here"

# Instagram Basic Display API
INSTAGRAM_ACCESS_TOKEN="your_instagram_access_token_here"

# Naver Search Trends API
NAVER_CLIENT_ID="your_naver_client_id_here"
NAVER_CLIENT_SECRET="your_naver_client_secret_here"

# TikTok Content API (optional)
TIKTOK_ACCESS_TOKEN="your_tiktok_access_token_here"

# ML Model Configuration
ML_MODEL_VERSION="v1.0"
ML_CONFIDENCE_THRESHOLD="0.7"
ML_PREDICTION_HORIZON_DAYS="90"

# Data Collection Settings
DATA_COLLECTION_INTERVAL_HOURS="6"
TREND_DISCOVERY_THRESHOLD="0.8"
SOCIAL_SIGNAL_WEIGHT="0.6"
MANUAL_CURATION_WEIGHT="0.4"

# Rate Limiting
YOUTUBE_REQUESTS_PER_DAY="10000"
INSTAGRAM_REQUESTS_PER_HOUR="200"
NAVER_REQUESTS_PER_DAY="1000"

# Monitoring and Alerts
PREDICTION_ACCURACY_THRESHOLD="0.75"
DATA_FRESHNESS_ALERT_HOURS="12"
TREND_ALERT_WEBHOOK_URL="https://hooks.slack.com/your/webhook/url"
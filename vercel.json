{
  "framework": "nextjs",
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python@3.11.0"
    }
  },
  "crons": [
    {
      "path": "/api/collect",
      "schedule": "15 * * * *"
    },
    {
      "path": "/api/analyze", 
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/alerts",
      "schedule": "*/30 * * * *"
    }
  ]
}